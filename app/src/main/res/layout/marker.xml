<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_main_center_dummy"
            android:layout_width="@dimen/divider_width_small"
            android:layout_height="@dimen/divider_height_small"
            android:layout_centerInParent="true" />

        <View
            android:id="@+id/view_main_below_center_dummy"
            android:layout_width="@dimen/divider_width_small"
            android:layout_height="@dimen/divider_height_small"
            android:layout_below="@+id/view_main_center_dummy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_tiny" />

        <ImageView
            android:id="@+id/view_main_center_shadow_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignBottom="@+id/view_main_below_center_dummy"
            android:layout_centerHorizontal="true"
            android:alpha="0.7"
            app:srcCompat="@drawable/ic_shadow" />

        <ImageView
            android:id="@+id/view_main_center_dot_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view_main_center_dummy"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_dot" />

        <View
            android:id="@+id/er"
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:layout_above="@+id/view_main_center_dot_iv"
            android:layout_centerInParent="true" />

        <ImageButton
            android:id="@+id/view_main_location_selector_ib"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_above="@+id/er"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-7dp"
            android:background="@color/transparent"
            android:contentDescription="origin_pin_marker_desc"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_origin_unselected_marker" />

    </RelativeLayout>

</RelativeLayout>