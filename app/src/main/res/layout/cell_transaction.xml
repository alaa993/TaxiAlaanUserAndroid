<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:minHeight="@dimen/_55sdp"
    android:orientation="vertical"
    android:paddingTop="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/_40sdp"
            android:minHeight="@dimen/_40sdp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_trending_up_green_500_24dp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.taxialaan.app.Utils.MyBoldTextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:paddingStart="@dimen/_10sdp"
                android:text="Add Money"
                android:textColor="@color/colorSecondText"
                android:textSize="8sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.taxialaan.app.Utils.MyBoldTextView
                    android:id="@+id/txtType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="500,000"
                    android:textColor="@color/black_text_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.taxialaan.app.Utils.MyBoldTextView
                    android:id="@+id/txtAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="500,000"
                    android:textColor="@color/black_text_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <com.taxialaan.app.Utils.MyBoldTextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/border_stroke_gray_light"
                android:gravity="center|start"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="Add Money"
                android:textColor="#868686"
                android:textSize="9sp"
                android:textStyle="bold" />

            <com.taxialaan.app.Utils.MyBoldTextView
                android:id="@+id/txtCommission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:paddingStart="@dimen/_10sdp"
                android:text="Add Money"
                android:textColor="@color/colorSecondText"
                android:textSize="12sp" />

            <com.taxialaan.app.Utils.MyBoldTextView
                android:id="@+id/txtCash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:paddingStart="@dimen/_10sdp"
                android:text="Add Money"
                android:textColor="@color/colorSecondText"
                android:textSize="12sp" />

            <com.taxialaan.app.Utils.MyBoldTextView
                android:id="@+id/txtDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:paddingStart="@dimen/_10sdp"
                android:text="Add Money"
                android:textColor="@color/colorSecondText"
                android:textSize="12sp" />


            <com.taxialaan.app.Utils.MyBoldTextView
                android:id="@+id/txtRemainBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:paddingStart="@dimen/_10sdp"
                android:text="Add Money"
                android:textColor="@color/colorSecondText"
                android:textSize="12sp" />


            <com.taxialaan.app.Utils.MyBoldTextView
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:paddingStart="@dimen/_10sdp"
                android:text="Add Money"
                android:textColor="@color/colorSecondText"
                android:textSize="12sp" />


        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color" />

</LinearLayout>
