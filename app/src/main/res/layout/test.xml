<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View android:id="@+id/view_main_center_dummy"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"/>

        <View android:id="@+id/view_main_below_center_dummy"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/view_main_center_dummy"
            android:layout_centerHorizontal="true"/>

        <ImageView android:id="@+id/view_main_center_shadow_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:srcCompat="@drawable/ic_shadow"
            android:layout_alignBottom="@+id/view_main_below_center_dummy"
            android:layout_centerHorizontal="true"
            android:alpha="0.2"/>

        <ImageView
            android:id="@+id/view_main_center_dot_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_dot"
            android:layout_above="@+id/view_main_center_dummy"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/view_main_location_selector_ib"
            android:background="@color/transparent"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/ic_origin_unselected_marker"
            android:scaleType="fitCenter"
            android:layout_above="@+id/view_main_center_dummy"
            android:layout_centerHorizontal="true"
            android:contentDescription="des"/>

    </RelativeLayout>




</LinearLayout>